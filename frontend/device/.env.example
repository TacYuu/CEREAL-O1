# Roboflow Inference
ROBOFLOW_API_KEY=__ROBOFLOW_KEY__
ROBOFLOW_MODEL_ID=cereal-hzsdj/2
ROBOFLOW_API_BASE=https://detect.roboflow.com
ROBOFLOW_USE_SDK=true

# Serial / Capture Settings
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUD=115200
CAPTURE_COOLDOWN_SECONDS=5
ULTRA_EVENT_MIN_INTERVAL=2
IMAGE_SAVE_DIR=./captures
LOG_LEVEL=INFO
CAMERA_INDEX=0
REQUEST_TIMEOUT=10

# Supabase (DO NOT COMMIT REAL SECRETS)
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_KEY=__SERVICE_ROLE_KEY__  # put real key only on device

# Multi-device credentials
DEVICE_ID=DEVICE_A
DEVICE_DEVICE_SECRET=__RAW_DEVICE_SECRET__  # raw secret; hashed in DB as sha256(secret:DEVICE_ID)

# Award / Queue Settings
AWARD_POINTS_ENABLED=true
AWARD_DEFAULT_POINTS=5
AWARD_MIN_INTERVAL_SECONDS=30   # per RFID minimum time between awards
AWARD_QUEUE_PATH=./award_queue.jsonl
AWARD_QUEUE_FLUSH_SECONDS=60    # retry interval
AWARD_MAX_BATCH=50

# Future: class-based overrides (comma list class:points)
# AWARD_CLASS_POINTS=plastic:5,metal:8,glass:10
